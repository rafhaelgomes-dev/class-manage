<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="526.0" prefWidth="600.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ads.projetoa3.app.controllers.DisciplinaController">
   <children>
      <VBox alignment="CENTER" layoutX="163.0" layoutY="26.0" spacing="20.0">
         <children>
            <Label text="Cadastro de Disciplinas" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI Bold" size="28.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <VBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-text-fill: #555;" text="Nome">
                           <font>
                              <Font name="Segoe UI Semibold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="nomeDisciplina" prefHeight="35.0" prefWidth="250.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-border-width: 1;" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">

                     <children>
                        <Label style="-fx-text-fill: #555;" text="Código">
                           <font>
                              <Font name="Segoe UI Semibold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="codigo" prefHeight="35.0" prefWidth="250.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-border-width: 1;" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-text-fill: #555;" text="Carga Horária">
                           <font>
                              <Font name="Segoe UI Semibold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="cargaHoraria" prefHeight="35.0" prefWidth="250.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-border-width: 1;" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-text-fill: #555;" text="Descrição">
                           <font>
                              <Font name="Segoe UI Semibold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="descricao" prefHeight="35.0" prefWidth="250.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-border-width: 1;" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <Button defaultButton="true" layoutX="227.0" layoutY="453.0" mnemonicParsing="false" onAction="#salveDisciplina" text="Salvar" />
      <Button cancelButton="true" layoutX="342.0" layoutY="453.0" mnemonicParsing="false" onAction="#cancelDisciplina" text="Cancelar" />
   </children>
</AnchorPane>
